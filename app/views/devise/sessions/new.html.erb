<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0 text-center">Log in</h5>
      <div class="form-body p-4">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
          <% @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>

        <%= form_with model: @user, url: user_session_path, local:true do |f| %>
        <div class="input-group mb-3 justify-content-center">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"メールアドレス" %>
        </div>

        <div class="input-group mb-3 justify-content-center">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
          </div>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"パスワード" %>
        </div>

          <% if devise_mapping.rememberable? %>
            <div class="field text-center">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class:"btn btn-lg btn-block btn-info mt-3" %>
          </div>
        <% end %>
        </div>
        <div class="text-center mb-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>